                                  o_entry_d + ''', ' + ' NULL,' + intToStr(o_ol_cnt) + ', '+ st_local +
                                  '        ); ';
          SQLQuery1.ExecSQL();

          no_o_id := o_id;
          no_d_id := d_id;
          no_w_id := w_id;

           SQLQuery1.SQL.Text := 'INSERT INTO NEW_ORDER' +
                                 '  ( NO_O_ID , NO_D_ID , NO_W_ID ) ' +
                                 ' VALUES ( ' +
                                   intToStr(no_o_id) + ', ' + intToStr(no_d_id) + ', ' + intToStr(no_w_id) +
